@model IEnumerable<routine_explorer.Models.RoutineFileUploaderStatus>

@{
    ViewData["Title"] = "SWE Routine";
}


<div class="row center">
    <div class="col-md-8">
        
        <div class="text-center">
            <h5 class="display-5"><i class="fas fa-user-graduate"></i> Students Routine</h5>
        </div>
        <hr/>
        <form method="post" autocomplete="off" asp-action="StudentsRoutine" asp-controller="Routines" enctype="multipart/form-data">
            <div class="form-group">
                <select class="form-control custom-select" id="selected" name="selected">
                    @try
                    {
                        @foreach (var item in Model)
                        {
                            <option value=@item.Id>@Html.DisplayFor(modelItem => item.NameOfFilesUploaded)</option>
                        }
                    }
                    catch (System.Exception)
                    {
                        <option value="">No Files Uploaded</option>
                    }
                </select>
            </div>

            <div class="form-group">
               <label for="subject1">Subject Code 1</label>
                <input type="text" class="form-control" id="subject1" name="subject1" placeholder="SWEXXXA">
            </div>

            <div class="form-group">
               <label for="subject2">Subject Code 2</label>
                <input type="text" class="form-control" id="subject2" name="subject2" placeholder="SWEXXXA">
            </div>

            <div class="form-group">
               <label for="subject3">Subject Code 3</label>
                <input type="text" class="form-control" id="subject3" name="subject3" placeholder="SWEXXXA">
            </div>

            <div class="form-group">
               <label for="subject4">Subject Code 4</label>
                <input type="text" class="form-control" id="subject4" name="subject4" placeholder="SWEXXXA">
            </div>

            <div class="form-group">
               <label for="subject5">Subject Code 5</label>
                <input type="text" class="form-control" id="subject5" name="subject5" placeholder="SWEXXXA">
            </div>
            
            <div class="col-md-12 text-center">
                    <div class="form-group">
                    <input type="submit" value="Check Routine" class="btn btn-raised btn-primary" />  
            </div>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="text-center">
            <h5 class="display-5"><i class="fas fa-chalkboard-teacher"></i> Teachers Routine</h5>
        </div>
        <hr/>
        <form method="post" autocomplete="off" asp-action="TeachersRoutine" asp-controller="Routines" enctype="multipart/form-data">
            <div class="form-group">
                <select class="form-control custom-select" id="selected" name="selected">
                    @try
                    {
                        @foreach (var item in Model)
                        {
                         <option value=@item.Id>@Html.DisplayFor(modelItem => item.NameOfFilesUploaded)</option>
                        }
                    }
                    catch (System.Exception)
                    {
                        <option value="">No Files Uploaded Yet</option>
                    }
                </select>
            </div>

            <div class="form-group">
               <label for="teacherInitial">Teacher Initial</label>
                <input type="text" class="form-control" id="teacherInitial" name="teacherInitial" placeholder="DTB">
            </div>
            
            <div class="col-md-12 text-center">
                <div class="form-group">
                    <input type="submit" value="Check Routine" class="btn btn-raised btn-primary" />  
                </div>
            </div>

            <div class="col-md-12">
                <div class="card">
                 <div class="card-body">
                     <h5 class="card-title text-justify"><i class="fas fa-code"></i> About</h5>
                    <p class="card-text text-justify">This is a general purpose application built for the students and teacher of the Department of Software Engineering, Daffodil International University to view their class schedule of every semester. This application is build with <b>.NET Core 2.2 MVC</b>. If you want to contribute to this project, then follow this link below.</p>
                    <a href="https://github.com/shunjid/routine-explorer" target="_blank" class="btn btn-raised btn-primary"><i class="fab fa-github"></i> Repository in GitHub</a> 
                </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationAutoComplete");}
}






